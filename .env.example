# Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration - Generate secure password using: openssl rand -base64 24
POSTGRES_USER=pii
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD
POSTGRES_DB=piidetector
DATABASE_URL=postgresql://pii:REPLACE_WITH_SECURE_DB_PASSWORD@postgres:5432/piidetector

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security - Generate secure values using: openssl rand -base64 32
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS

# External Services - Obtain from OpenAI dashboard
OPENAI_API_KEY=REPLACE_WITH_YOUR_OPENAI_API_KEY

# File Storage
UPLOAD_DIR=/uploads
TMP_DIR=/tmp
MAX_FILE_SIZE=104857600

# ClamAV Configuration
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourcompany.com

# Webhook Configuration (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Domain Configuration
DOMAIN=localhost
EMAIL=admin@localhost